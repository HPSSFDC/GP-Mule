                      <name>Corporate Exchange Repository</name>
                     <url>
https://maven.anypoint.mulesoft.com/api/v3/organizations/533d80cc-e6d1-4700-bdf9-6bc6587d18ee/maven</url>
<layout>default</layout>
</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>mulesoft-releases</id>
			<name>MuleSoft Releases Repository</name>
			<layout>default</layout>
			<url>https://repository.mulesoft.org/releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

</project>
